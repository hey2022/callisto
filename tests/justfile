all-pdf:
    #!/usr/bin/env bash
    shopt -s nullglob
    set -eu
    for file in */*.typ; do
        just make-pdf "$file"
    done

make-pdf filename: pdf-dir
    typst c --root=.. {{filename}} pdf/{{parent_directory(filename)}}.pdf

pdf-dir:
    @mkdir -p pdf
    
test:
    tt run --root=.. -j8
    
clean:
    #!/usr/bin/env bash
    rm -r */.ipynb_checkpoints
